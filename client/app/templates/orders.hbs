<div class="row full-width">

  <div class="small-8 columns">
    {{outlet}}
  </div>

  <div class="small-4 columns">
    <div class="row">
        <div class="small-12 columns order-statuses">
            {{render "statuses"}}
        </div>
    </div>
  </div>

</div>